<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <EditText
        android:id="@+id/nameEditText"
        android:layout_width="385dp"
        android:layout_height="58dp"
        android:layout_marginTop="16dp"
        android:hint="Enter your name" />

    <EditText
        android:id="@+id/classEditText"
        android:layout_width="378dp"
        android:layout_height="58dp"
        android:layout_below="@id/nameEditText"
        android:layout_marginTop="16dp"
        android:hint="Enter your department" />

    <EditText
        android:id="@+id/rollNumberEditText"
        android:layout_width="378dp"
        android:layout_height="57dp"
        android:layout_below="@id/classEditText"
        android:layout_marginTop="16dp"
        android:hint="Enter your roll number" />

    <EditText
        android:id="@+id/emailEditText"
        android:layout_width="380dp"
        android:layout_height="55dp"
        android:layout_below="@id/rollNumberEditText"
        android:layout_marginTop="16dp"
        android:hint="Enter your email" />

    <EditText
        android:id="@+id/roomNumberEditText"
        android:layout_width="382dp"
        android:layout_height="58dp"
        android:layout_below="@id/emailEditText"
        android:layout_marginTop="16dp"
        android:hint="Enter Room Number" />

    <Spinner
        android:id="@+id/advisorSpinner"
        android:layout_width="380dp"
        android:layout_height="60dp"
        android:layout_below="@id/roomNumberEditText"
        android:layout_marginTop="16dp"
        android:spinnerMode="dropdown" />

    <Spinner
        android:id="@+id/wardenSpinner"
        android:layout_width="378dp"
        android:layout_height="55dp"
        android:layout_below="@id/advisorSpinner"
        android:layout_marginTop="16dp"
        android:spinnerMode="dropdown" />

    <Button
        android:id="@+id/saveButton"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="108dp"
        android:layout_marginBottom="135dp"
        android:text="Save" />

</RelativeLayout>
